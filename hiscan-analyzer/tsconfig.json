{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "src/components/*SimTab.vue",
    "src/components/Analyzer3dOnlySimTab.vue",
    "src/components/AnalyzerOpenGLTestTab.vue",
    "src/components/AnalyzerWindowLabTab.vue",
    "src/components/AnalyzerAnalysisSimTab.vue",
    "src/components/MaskManager.vue",
    "src/services/imageProcessing.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
